<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile EJS</title>
    <script src="https://cdn.tailwindcss.com"></script>    
</head>
<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <!-- logout button-->
        <div class=" w-full flex justify-end">
        <a class="bg-red-500 rounded-md px-3 py-2 text-sm  mb-5 inline-block" href="/logout">Logout</a> 
        </div>
        <!-- profile photo-->
        <div class="flex item-start gap-3">
        <div class="w-10 h-10  rounded-md overflow-hidden ">
            <a href="/profile/upload"><img class="w-full h-full object-cover " src="/images/uploads/<%= user.profilepic %>"></a>
        </div>
        <h3 class="text-3xl font-bold "><span class="font-light">Hello</span> <%=user.name%> &#9995;</h3>
        </div>

        <h5 class="mb-5 mt-3 font-bold">Create a New Blog:</h5>
         <form method="post" action="/post">
            <textarea placeholder="What's on you Mind ?" class=" block p-3 outline-none w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md" name="content"></textarea>
            <button class="px-3 py-2 w-40 text-sm font-bold bg-blue-500 block rounded-md mt-2" type="submit">Create New Post</button>
         </form>
         <div class="posts mt-20">
            <h3 class="text-zinc-400 font-bold">Your Blogs.</h3>
            <div class="postcontainer mt-5">
                <!--post1-->
                
                <!--post2-->
                <!-- <div class="post w-1/3 p-4 mb-4 rounded-md border-[1px] border-zinc-700 bg-zinc-800">
                    <h4 class="text-blue-500 mb-2 font-bold">@someusername</h4>
                    <p class="text-sm tracking-tight font-bold">Lorem ipsum dolor sit amet consectetur adipisicing elit. Ipsa assumenda nulla pariatur laudantium ad, hic voluptate corporis, quibusdam maxime doloremque autem fugiat unde et, voluptatibus quidem quis quos deserunt temporibus.</p>
                    <div class="btns flex gap-4 mt-5">
                        <a class="text-blue-500 font-bold" href="">Like</a> 
                        <a class="text-zinc-600 font-bold" href="">Edit</a>  
                    </div>
                  </div> -->
            <% user.post.reverse().forEach(function (post) {  %>

                <div class="post w-1/3 p-4 mb-4 rounded-md border-[1px] border-zinc-700 bg-zinc-800">
                  <h4 class="text-blue-500 mb-2 font-bold">@<%= user.name %></h4>
                  <p class="text-sm tracking-tight font-bold"><%= post.content %></p>
                  <small class="mt-2 inline-block font-bold"><%= post.Likes.length%> likes</small>
                  <div class="btns flex gap-4 mt-1">
                      <a class="text-blue-500 font-bold" href="/like/<%= post._id %>">
                        <%= post.Likes.indexOf(user._id) === -1 ? "Like" : "UnLike" %></a> 
                      <a class="text-zinc-600 font-bold" href="/edit/<%= post._id %>">Edit</a> 
                      <a class="text-zinc-600 font-bold" href="/delete/<%= post._id %>">Delete</a>  
                  </div>
                </div>

            <% }) %>
            </div>
         </div>
    </div>
    
</body>
</html>